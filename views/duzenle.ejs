<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Düzenle | Kilis Vakfı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style> :root { --vakif-yesil: #2d5a27; } .navbar { background-color: var(--vakif-yesil) !important; } </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark shadow mb-4">
        <div class="container"><a class="navbar-brand" href="/">DÜZENLEME PANELİ</a></div>
    </nav>
    <div class="container">
        <div class="card p-5 shadow-sm text-center" style="border-radius: 15px;">
            <img src="/img/logo.png" class="mx-auto mb-4" style="height: 100px;">
            
            <div class="row text-start">
                <div class="col-md-5 border-end">
                    <h5 class="text-success fw-bold mb-3">Öğrenci Seçin</h5>
                    <div class="list-group">
                        <% ogrenciler.forEach(o => { %>
                            <a href="/duzenle/<%= o.id %>" class="list-group-item list-group-item-action <%= seciliOgrenci && seciliOgrenci.id === o.id ? 'active' : '' %>" style="<%= seciliOgrenci && seciliOgrenci.id === o.id ? 'background-color: var(--vakif-yesil);' : '' %>">
                                <%= o.isim %>
                            </a>
                        <% }) %>
                    </div>
                </div>

                <div class="col-md-7 ps-4">
                    <h5 class="text-success fw-bold mb-3">Bilgileri Güncelle</h5>
                    <% if (seciliOgrenci) { %>
                        <form action="/duzenle/<%= seciliOgrenci.id %>" method="POST">
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Ad Soyad</label>
                                <input type="text" name="isim" class="form-control" value="<%= seciliOgrenci.isim %>" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Oda No</label>
                                <input type="text" name="odaNo" class="form-control" value="<%= seciliOgrenci.odaNo %>" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small fw-bold">Telefon</label>
                                <input type="tel" name="tel" class="form-control" value="<%= seciliOgrenci.tel %>" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100" style="background-color: var(--vakif-yesil);">Güncelle</button>
                        </form>
                    <% } else { %>
                        <p class="text-muted">Lütfen soldan bir öğrenci seçin.</p>
                    <% } %>
                </div>
            </div>

            <div class="mt-5 pt-3 border-top">
                <a href="/" class="btn btn-outline-secondary btn-sm">Ana Sayfaya Dön</a>
                <p class="small text-muted mt-2">Yönetici: Mehmet Kerem Hakan (23040301045)</p>
            </div>
        </div>
    </div>
</body>
</html>
